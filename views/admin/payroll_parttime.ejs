<div class="p-5 max-w-screen h-full bg-gray-100 rounded-tl-4xl relative overflow-x-hidden overflow-y-auto flex-col flex">
<table data-months="<%= JSON.stringify(dtrmonths) %>" id="search-table">
  <thead>
    <tr>
      <th>
        <span class="flex items-center w-10">
          Emp. No.
          <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
          </svg>
        </span>
      </th>
      <th>
        <span class="flex items-center w-60">
          Name
          <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
          </svg>
        </span>
      </th>
      <th>
        <span class="flex items-center w-30">
          COS
          <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
          </svg>
        </span>
      </th>
      <th>
        <span class="flex items-center w-60">
          Designation
          <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
          </svg>
        </span>
      </th>
      <th>
        <span class="flex items-center w-30">
          Hourly Salary
          <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
          </svg>
        </span>
      </th>

      <th>
        <div class="flex flex-col items-center w-50">
          <span class="text-xs font-semibold text-center">WORK TIME</span>
          <div class="w-full flex flex-row justify-between font-normal text-[11px]">
            <span class="flex items-center px-1">
              Hour:Minutes
            </span>
            <span class="flex items-center px-1">
              Amount
            </span>
          </div>
        </div>
      </th>
      <th>
        <div class="flex flex-col items-center w-60 text-center">
          <span class="text-xs font-semibold text-center">Deductions</span>
          <div class="w-full justify-between flex flex-row font-normal text-[11px]">
            <span class="flex text-center justify-center items-center px-1 w-20">
                SSS
            </span>
            <span class="flex text-center justify-center items-center px-1 w-20">
                MICRODEV
            </span>
            <span class="flex text-center justify-center items-center px-1 w-20">
                PAGIBIG
            </span>
          </div>
        </div>
      </th>
      <th>
        <span class="flex items-center w-30">
            Net Pay
            <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
            </svg>
        </span>
      </th>
    </tr>
  </thead>
  <tbody>
    <% if (employees) { %>
      <% employees.forEach(employee => { %>
        <tr>
          <td><%= employee.b_id %></td>
          <td><span class="text-gray-600 font-semibold uppercase text-center"><%= employee.first_name + " " + (employee.middle_name || "") + " " + employee.last_name %></span></td>
          <td><span class="capitalize text-center"><%= employee.type || "N/A" %></span></td>
          <td><span class="capitalize text-center"><%= employee.designation || "N/A" %></span></td>
          <td><span class="text-center"><%= Number(employee.hourly_salary).toLocaleString('en-PH',  { style: 'currency', currency: 'PHP',  maximumFractionDigits: 0 }) %></span></td>
          <td class="text-center">
            <div class="flex flex-row items-center">
              <span class="w-full text-start"><%= employee.totalHoursWorked %></span>
              <span class="w-full text-end"><%= Number(employee.totalPay).toLocaleString('en-PH',  { style: 'currency', currency: 'PHP',  maximumFractionDigits: 0 }) %></span>
            </div>
          </td>
          <td class="text-center">
            <div class="flex flex-row items-center justify-between">
              <span class="text-center w-20"><%= Number(employee.sss).toLocaleString('en-PH',  { style: 'currency', currency: 'PHP',  maximumFractionDigits: 0 }) %></span>
              <span class="text-center w-20"><%= Number(employee.microdev).toLocaleString('en-PH',  { style: 'currency', currency: 'PHP',  maximumFractionDigits: 0 }) %></span>
              <span class="text-center w-20"><%= Number(employee.pagibig).toLocaleString('en-PH',  { style: 'currency', currency: 'PHP',  maximumFractionDigits: 0 }) %></span>
            </div>
          </td>
          <td><span class="capitalize text-center"><%= Number(employee.netpay).toLocaleString('en-PH',  { style: 'currency', currency: 'PHP',  maximumFractionDigits: 0 }) %></span></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

</div>