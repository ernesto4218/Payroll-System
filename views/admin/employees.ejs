<div class="p-5 max-w-screen h-full bg-gray-100 rounded-tl-4xl relative overflow-x-hidden overflow-y-auto flex-col flex">
    <table id="search-table">
        <thead>
            <tr>
                <th>
                    <span class="flex items-center">
                        ID
                        <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
                        </svg>
                    </span>
                </th>
                <th>
                    <span class="flex items-center w-60">
                        Full Name
                        <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
                        </svg>
                    </span>
                </th>
                <th>
                    <span class="flex items-center w-40">
                        Type
                        <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
                        </svg>
                    </span>
                </th>
                <th>
                    <span class="flex items-center w-50">
                        Date Added
                        <svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
                        </svg>
                    </span>
                </th>
                <th>
                    <span class="flex items-center">
                        Action
                    </span>
                </th>
            </tr>
        </thead>
        <tbody>
            <% if (employees && employees.length > 0) { %>
                <% employees.forEach(employee => { %>
                 <tr>
                    <td><%= employee.b_id %></td>
                    <td>
                        <%= [employee.first_name, employee.middle_name, employee.last_name]
                                .map(name => name.charAt(0).toUpperCase() + name.slice(1).toLowerCase())
                                .join(" ") %>
                    </td>
                    <td><%= employee.type %></td>
                    <td><%= employee.date_added %></td>
                    <td>
                        <div class="flex flex-row gap-2 items-center">
                            <span data-employee='<%= JSON.stringify(employee) %>' class="editbtn cursor-pointer bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-sm">Edit</span>
                            <span data-employeedata="<%= JSON.stringify(employee) %>" data-employee='<%= employee.id %>' class="dtrbtn cursor-pointer bg-emerald-100 text-emerald-800 text-xs font-medium px-2.5 py-0.5 rounded-sm">DTR</span>
                            <span data-employee='<%= employee.id %>' class="recordsbtn cursor-pointer bg-gray-200 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-sm">Records</span>
                        </div>
                    </td>
                </tr>    
                <% }) %>
            <% } %>
            
        </tbody>

    </table>
</div>